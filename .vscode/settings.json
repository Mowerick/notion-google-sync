{
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "editor.formatOnType": false, // required
  "editor.formatOnPaste": false, // optional
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange", // optional but recommended
  // Automatically fix ESLint issues on save
  "editor.codeActionsOnSave": {
    "source.fixAll": "always", // This will fix ESLint and Prettier issues
    "source.organizeImports": "always"
  },
  "vs-code-prettier-eslint.prettierLast": false,
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "yaml.schemas": {
    "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": "file:///home/oliver/private_projects/notion-google-sync/gitlab-ci.yml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  } // set as "true" to run 'prettier' last not first
}
